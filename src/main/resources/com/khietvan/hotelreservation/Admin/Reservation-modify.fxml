<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="586.0" prefWidth="983.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.khietvan.hotelreservation.controllers.Admin.ReservationModifyController">

    <children>
        <Text layoutX="58.0" layoutY="40.0" text="Modify Customer &amp; Booking">
            <font><Font name="System Bold Italic" size="22.0" /></font>
        </Text>

        <GridPane hgap="8" layoutX="58.0" layoutY="60.0" prefHeight="500.0" prefWidth="370.0" vgap="8">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="140.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="150.0" prefWidth="220.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <!-- Editable fields -->
            <Label text="Name:" GridPane.rowIndex="0" />      <TextField fx:id="customerName" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Phone:" GridPane.rowIndex="1" />     <TextField fx:id="customerPhone" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Email:" GridPane.rowIndex="2" />     <TextField fx:id="customerEmail" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Address:" GridPane.rowIndex="3" />   <TextField fx:id="customerAddress" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <!-- Read-only booking dates -->
            <Label text="Check In Date:" GridPane.rowIndex="4" />  <TextField fx:id="checkInDate" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Check Out Date:" GridPane.rowIndex="5" /> <TextField fx:id="checkOutDate" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <!-- Buttons -->
            <HBox spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="6">
                <children>
                    <Button fx:id="saveBtn" prefWidth="140.0" text="Save Changes" />
                    <Button fx:id="closeBtn" prefWidth="100.0" text="Close" />
                </children>
            </HBox>
        </GridPane>

        <TableView fx:id="roomInfo" layoutX="460.0" layoutY="80.0" prefHeight="420.0" prefWidth="470.0">
            <columns>
                <TableColumn fx:id="roomId" prefWidth="80.0" text="Room ID" />
                <TableColumn fx:id="roomType" prefWidth="150.0" text="Room Type" />
                <TableColumn fx:id="roomPrice" prefWidth="110.0" text="Price" />
                <TableColumn fx:id="noOfGuestInRoom" prefWidth="130.0" text="Number of people" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
